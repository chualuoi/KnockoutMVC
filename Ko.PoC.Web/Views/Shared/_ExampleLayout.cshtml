@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  var body = RenderBody();
}

<article id="live">
  <h2>Live example</h2>
  <div class="well">
    @body
  </div>
</article>
<article id="model">
  <h2>Model</h2>
  <pre class="prettyprint lang-cs">@ViewBag.Model</pre>
</article>
<article id="razor">
  <h2>Razor</h2>
  <pre class="prettyprint lang-cs">@ViewBag.Razor</pre>
</article>
<article id="controller">
  <h2>Controller</h2>
  <pre class="prettyprint lang-cs">@ViewBag.Controller</pre>
</article>
<article id="html">
  <h2>Html (autogenerated)</h2>
  <pre class="prettyprint lang-html">@body.ToHtmlString()</pre>
</article>
@section scripts
{
    @Scripts.Render("~/bundles/pretify")
    @RenderSection("scripts", required: false)
}